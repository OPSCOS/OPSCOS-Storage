SELECT

HEARING_SEQ_KEY,


 CASE TO_CHAR(SCHEDULE_DATETIME, 'Day')
        WHEN '1' THEN 'Monday'
        WHEN '2' THEN 'Tuesday'
        WHEN '3' THEN 'Wednesday'
        WHEN '4' THEN 'Thursday'
        WHEN '5' THEN 'Friday'
        WHEN '6' THEN 'Saturday'
        WHEN '7' THEN 'Sunday'
    END AS DAY_NAME,

CASE HRG_DECISION_CODE
 WHEN 'Hear_Continued' THEN 'Hearing Continued'
 WHEN 'Denied' THEN 'Denied' 
 WHEN 'Deferred' THEN 'Hearing Deferred'
 WHEN 'Hear_Closed'THEN 'Hearing Closed'
 WHEN 'Approved' THEN 'Approved'
 WHEN 'Continued' THEN 'Continued'
ELSE NULL 
END AS HEARING_DECISION,

 CASE 
        WHEN EXTRACT(MONTH FROM SCHEDULE_DATETIME) = 1 THEN 'January'
        WHEN EXTRACT(MONTH FROM SCHEDULE_DATETIME) = 2 THEN 'February'
        WHEN EXTRACT(MONTH FROM SCHEDULE_DATETIME) = 3 THEN 'March'
        WHEN EXTRACT(MONTH FROM SCHEDULE_DATETIME) = 4 THEN 'April'
        WHEN EXTRACT(MONTH FROM SCHEDULE_DATETIME) = 5 THEN 'May'
        WHEN EXTRACT(MONTH FROM SCHEDULE_DATETIME) = 6 THEN 'June'
        WHEN EXTRACT(MONTH FROM SCHEDULE_DATETIME) = 7 THEN 'July'
        WHEN EXTRACT(MONTH FROM SCHEDULE_DATETIME) = 8 THEN 'August'
        WHEN EXTRACT(MONTH FROM SCHEDULE_DATETIME) = 9 THEN 'September'
        WHEN EXTRACT(MONTH FROM SCHEDULE_DATETIME) = 10 THEN 'October'
        WHEN EXTRACT(MONTH FROM SCHEDULE_DATETIME) = 11 THEN 'November'
        WHEN EXTRACT(MONTH FROM SCHEDULE_DATETIME) = 12 THEN 'December'
        ELSE NULL 
    END || ' ' ||
    EXTRACT(DAY FROM SCHEDULE_DATETIME) || ', ' ||
    EXTRACT(YEAR FROM SCHEDULE_DATETIME) AS SCHEDULE_DATETIME



FROM PSC_PZ_HEARING_EVENT
WHERE SCHEDULE_STATUS != 'ORA_CANCELLED'
ORDER BY CREATION_DATE DESC
