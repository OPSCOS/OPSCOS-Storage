SELECT
LNP_RECORD_KEY,
LNP_RECORD_ID,
ATTRIBUTE_CATEGORY,
PERSON_FIRST_NAME || ' ' || PERSON_LAST_NAME APPLICANT_NAME, 
EXTN_ATTRIBUTE_CHAR003 AS NAME_OF_ESTABLISHMENT, 

CASE EXTN_ATTRIBUTE_CHAR004	
	WHEN 'CAT' THEN 'CATERER'
	WHEN 'FS' THEN 'FOOD SERVICE'
	WHEN 'FT' THEN 'FOOD SERVICE'
	WHEN 'Retail' THEN 'FOOD SERVICE'
	ELSE NULL
END AS NAME_TYPE,


CASE EXTN_ATTRIBUTE_CHAR055	 
	WHEN 'CLASS1' THEN 'Class I'
	WHEN 'CLASS2' THEN 'Class II'
	WHEN 'CLASS3' THEN 'Class III'
	WHEN 'CLASS4' THEN 'Class IV'
	else NULL
END AS CLASS_TYPE,


CASE EXTN_ATTRIBUTE_CHAR033 
	when '1' then '1-15 Seats' 
    WHEN '16' THEN '16-25 Seats'
    when '26' THEN '26-50 Seats'
	WHEN '51' THEN '51-100 Seats'
    WHEN '101' THEN '101-150 Seats'
    WHEN '151' THEN '151-200 Seats'
    WHEN '201' THEN '201-250 Seats'
    when '251' THEN '251-300 Seats'
    when '300' then 'Over 301 Seats'
    WHEN 'Cat' Then 'Catering'
    When 'Sch' THEN 'Schools and/or Non-Profit'
    WHEN 'Tak' THEN 'Take Out'
    else NULL
END AS SEATING_CATEGORY,		

---ISSUE DATE 

 CASE 
        WHEN EXTRACT(MONTH FROM ISSUE_DATE) = 1 THEN 'January'
        WHEN EXTRACT(MONTH FROM ISSUE_DATE) = 2 THEN 'February'
        WHEN EXTRACT(MONTH FROM ISSUE_DATE) = 3 THEN 'March'
        WHEN EXTRACT(MONTH FROM ISSUE_DATE) = 4 THEN 'April'
        WHEN EXTRACT(MONTH FROM ISSUE_DATE) = 5 THEN 'May'
        WHEN EXTRACT(MONTH FROM ISSUE_DATE) = 6 THEN 'June'
        WHEN EXTRACT(MONTH FROM ISSUE_DATE) = 7 THEN 'July'
        WHEN EXTRACT(MONTH FROM ISSUE_DATE) = 8 THEN 'August'
        WHEN EXTRACT(MONTH FROM ISSUE_DATE) = 9 THEN 'September'
        WHEN EXTRACT(MONTH FROM ISSUE_DATE) = 10 THEN 'October'
        WHEN EXTRACT(MONTH FROM ISSUE_DATE) = 11 THEN 'November'
        WHEN EXTRACT(MONTH FROM ISSUE_DATE) = 12 THEN 'December'
        ELSE NULL 
    END || ' ' ||
    EXTRACT(DAY FROM ISSUE_DATE) || ', ' ||
    EXTRACT(YEAR FROM ISSUE_DATE) AS ISSUE_DATE,
    

 

'December 31, ' || EXTRACT(YEAR FROM EXPIRATION_DATE) AS EXPIRATION_DATE




FROM PSC_LNP_RECORD
WHERE LNP_RECORD_KEY = :P_LNP_RECORD_KEY
AND 'T' = (SELECT psc_bip_pii_security.secureData('PSC_BL_PRINT_BUSINESS_LICENSE_REPORT_DATA', 'PSC_LNP_RECORD', "PSC_LNP_RECORD"."LNP_RECORD_KEY",null,null,null,null ) FROM dual)
ORDER BY CREATION_DATE DESC
